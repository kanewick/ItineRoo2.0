@model AccountModel
@*

*@
@{
}
<div class="container">
    <div class="col-12">
        <div class="blmd-continer">
            <form class="clearfix form-hidden" id="Register-form" method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Register">
                <h1>Register Page</h1>
                <div class="col-md-12">
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="email" asp-for="UserRegisterModel.Email" autocomplete="off" id="username" class="form-control">
                            <label class="blmd-label">Email</label>
                        </div>
                    </div>
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="text" asp-for="UserRegisterModel.Username" autocomplete="off" id="username" class="form-control">
                            <label class="blmd-label">Username</label>
                        </div>
                    </div>
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="password" asp-for="UserRegisterModel.Password" autocomplete="off" id="password" class="form-control">
                            <label class="blmd-label">Password</label>
                        </div>
                    </div>
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="password" asp-for="UserRegisterModel.ConfirmPassword" autocomplete="off" id="password" class="form-control">
                            <label class="blmd-label">Repeat Password</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                    <input type="submit"  class="btn btn-blmd ripple-effect btn-warning btn-lg btn-block" />
                </div>
                <br />
            </form>
        </div>
    </div>
</div>