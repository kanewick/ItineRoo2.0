@model AccountModel
@*

*@
@{
}
<div class="container">
    <div class="col-12">
        <div class="blmd-continer">
            <form class="clearfix form-hidden" id="Register-form" method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Login">
                <h1>Login</h1>
                <div class="col-md-12">
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="email" asp-for="UserLoginModel.Email" autocomplete="off" id="username" class="form-control">
                            <label class="blmd-label">Email</label>
                        </div>
                    </div>
                    <div class="blmd-form">
                        <div class="blmd-line">
                            <input type="password" asp-for="UserLoginModel.Password" autocomplete="off" id="password" class="form-control">
                            <label class="blmd-label">Password</label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                    <div class="col-6">
                        <input type="submit" class="btn btn-blmd ripple-effect btn-warning btn-lg btn-block" />
                    </div>
                    <div class="col-6" style="float:right">
                        <a href="/account/register"class="btn btn-blmd ripple-effect btn-warning btn-lg btn-block" >Register</a>
                    </div>
                </div>
                <div class="col-sm-12 text-center">
                </div>
                <br />
            </form>
        </div>
    </div>
</div>